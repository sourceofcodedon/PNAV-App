<?xml version="1.0" encoding="utf-8"?>
<com.pampang.nav.utils.ZoomLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapNav.FirstMeatMapView">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- ðŸ—ºï¸ Background Map -->
    <ImageView
        android:id="@+id/mapImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/firstmeatpath"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <!-- ðŸ§­ Path Layer -->
    <com.pampang.nav.MapNav.FirstMeatPathView
        android:id="@+id/firstMeatPath"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- ðŸŽ¯ Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="32dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/go_to_destination"
            android:textColor="@android:color/white" />

        <!-- ðŸ§¹ Clear Path Button -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#B00020"
            android:text="@string/clear_path"
            android:textColor="@android:color/white" />
    </LinearLayout>

</FrameLayout>

</com.pampang.nav.utils.ZoomLayout>