<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapNav.GulayMapOne">

    <com.pampang.nav.utils.ZoomLayout
        android:id="@+id/zoom_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- ðŸ—ºï¸ Background Map -->
            <ImageView
                android:id="@+id/mapImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/firstgulay" />

            <!-- ðŸ§­ Path Layer -->

            <!-- ðŸ“ User Location Marker -->

            <com.pampang.nav.MapNav.FirstGulayPath
                android:id="@+id/firstgulay"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/user_marker"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_menu_mylocation"
                android:visibility="gone"
                app:tint="?attr/colorPrimary"
                tools:visibility="visible" />

        </FrameLayout>
    </com.pampang.nav.utils.ZoomLayout>

    <!-- ðŸ“ Instruction Banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/instruction_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        tools:visibility="visible">

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="Walk straight for 50 feet" />
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ“œ Guide Button -->
    <ImageButton
        android:id="@+id/guide_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:src="@android:drawable/ic_menu_sort_by_size"
        android:background="@drawable/bg_guide_button"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- ðŸŽ¯ Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/go_to_destination"
            android:textColor="@android:color/white" />

        <!-- ðŸ§¹ Clear Path Button -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#B00020"
            android:text="@string/clear_path"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
